<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="5dp">

        <TextView
            android:id="@+id/show_asso_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[Cyber] ENS7UXN3T"
            android:textColor="#000000"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/show_number_of_members"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:text="11 membre(s)" />

            <TextView
                android:id="@+id/show_asso_is_open_to_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Inscriptions ouvertes"
                android:textAlignment="viewEnd" />
        </LinearLayout>

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="0dp"
            android:layout_marginVertical="5dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/show_asso_description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description de l'association"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/show_asso_descrption_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Une association orientÃ©e cyberdÃ©fense.\nN'oubliez pas de prendre vos ordinateurs personnel ðŸ’»\nCours tous les mardi soirs de 17h30 Ã  19h15." />

        <Button
            android:id="@+id/show_asso_close_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Fermer" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>